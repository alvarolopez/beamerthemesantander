% CUSTOM FRAMES

\newcommand{\plain}[2][]{%
    \begingroup
    \setbeamercolor{background canvas}{
        use=palette primary,
        parent=palette primary
    }
    \begin{frame}[plain,c]{#1}
        \begin{center}
            \usebeamercolor[fg]{palette primary}
            \usebeamerfont{plain title}
            #2
        \end{center}
    \end{frame}
    \endgroup
}


