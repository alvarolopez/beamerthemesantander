% TITLE PAGE

\defbeamertemplate*{title page}{Zurich theme}[1][]{
  \vbox{}
  \vfill
%  \begin{centering}
    \begin{beamercolorbox}[sep=8pt,#1]{title page header}
      \usebeamerfont{title}\inserttitle\par%
      \ifx\insertsubtitle\@empty%
      \else%
        \vskip0.25em%
        {\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle\par}%
      \fi%     
       \vspace*{0.5em}
    \end{beamercolorbox}%
    \separator
    \begin{beamercolorbox}[sep=8pt,#1]{author}
        {\vspace*{2em}\par
        \usebeamerfont{author}
        \insertauthor 
        \par
        \vspace*{0.25em}}
        {\vspace{1mm}\usebeamerfont{institute}
        \insertinstitute%
        \par}
        {\vspace{3mm}\usebeamerfont{date}
        \insertdate
        }
    \end{beamercolorbox}\vskip0.5em
    {\usebeamercolor[fg]{titlegraphic}\inserttitlegraphic\par}
  \vfill
}
\def\maketitle{%
  \ifbeamer@inframe
    \titlepage
  \else
    \frame[plain,noframenumbering]{\titlepage}
  \fi
}
\def\titlepage{%
    \usebeamertemplate{title page}
}
\def\separator{
  \begin{tikzpicture}
    \draw[fg, fill=fg] (0,0) rectangle (\textwidth, 0.4pt);
  \end{tikzpicture}%
  \par%
}

